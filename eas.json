{
  "cli": {
    "version": ">= 12.6.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "npm": "npm install --legacy-peer-deps"
      },
      "ios": {
        "buildConfiguration": "debug" 
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "buildConfiguration": "release" 
      }
    },
    "production": {
      "autoIncrement": true,
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "npm": "npm install --legacy-peer-deps"
      },
      "ios": {
        "buildConfiguration": "release",  
        "credentialsSource": "local"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
